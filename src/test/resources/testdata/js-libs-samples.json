      "op": [],
      "expected": {} },

    { "message": "empty patch list",
      "node": {"foo": 1},
      "op": [],
      "expected": {"foo": 1} },

    { "message": "rearrangements OK?",
      "node": {"foo": 1, "bar": 2},
      "op": [],
      "expected": {"bar":2, "foo": 1} },

    { "message": "rearrangements OK?  How about one level down ... array",
      "node": [{"foo": 1, "bar": 2}],
